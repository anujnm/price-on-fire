{
  "manifest_version": 2,

  "name": "Price on Fire",
  "description": "This extension fetches the best prices for products you're interested in.",
  "version": "1.0",
  "background": {
      "scripts": ["resources/js/jquery-1.11.1.min.js", "background.js"],
      "persistent": false
  },
  "content_security_policy": "script-src 'self' https://stats.g.doubleclick.net; object-src 'self'",

  "permissions": [
    "http://svcs.ebay.com/",
    "activeTab",
    "declarativeContent"
  ],
  "page_action": {
    "default_icon": {
      "19": "resources/images/icon_19.png",
      "38": "resources/images/icon_38.png"
    },
    "default_popup": "popup.html",
    "default_title": "Price on Fire"
  },
  "content_scripts": [{
    "js": ["resources/js/jquery-1.11.1.min.js", "search_ebay.js"],
    "matches": ["http://*/*", "https://*/*"]
  }]
}
